@model Vdoflix.Web.Controllers.AccountController.RegisterVm
@{
    ViewData["Title"] = "Create Account";
}
<div class="container py-5" style="max-width:480px;">
    <h1 class="mb-4">Create account</h1>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" />
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
        <button class="btn btn-danger w-100" type="submit">Create account</button>
        <div class="mt-3">
            <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Sign in</a>
        </div>
    </form>
</div>
