@model Vdoflix.Web.Controllers.AccountController.LoginVm
@{
    ViewData["Title"] = "Sign In";
}
<div class="container py-5" style="max-width:480px;">
    <h1 class="mb-4">Sign in</h1>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
            <label class="form-check-label" for="RememberMe">Remember me</label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
        <button class="btn btn-danger w-100" type="submit">Sign in</button>
        <div class="mt-3">
            <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
        </div>
    </form>
</div>
